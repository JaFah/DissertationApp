<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_entry_base_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:layout_margin="4dp">
    <TextView
        android:id="@+id/list_entry_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="dd/mm/yyyy"
        android:textSize="16sp"
        android:textStyle="normal|italic" />
    <TextView
        android:id="@+id/list_entry_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_alignParentLeft="true"
        android:textStyle="normal|bold"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/list_entry_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="location"
        android:layout_below="@id/list_entry_name"
        android:textSize="18sp"
        android:textStyle="normal|bold|italic" />
    <TextView
        android:id="@+id/list_entry_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="style"
        android:layout_below="@id/list_entry_location"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/list_entry_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_entry_style"
        android:layout_below="@id/list_entry_location"
        android:text="Grade"
        android:layout_marginLeft="10dp"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/list_entry_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="comments"
        android:layout_below="@id/list_entry_style"
        android:textSize="16sp" />
    <Button
        android:id="@+id/list_entry_button_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_entry_comments"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Edit"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>