<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_entry_base_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_list_climb_log"
    android:layout_margin="4dp"
    android:paddingBottom="4dp">
    <TextView
        android:id="@+id/list_entry_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="dd/mm/yyyy"
        android:textSize="16sp"
        android:textStyle="normal|italic" />
    <TextView
        android:id="@+id/list_entry_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Title"
        android:layout_alignParentLeft="true"
        android:textStyle="normal|bold"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/list_entry_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="location"
        android:layout_below="@id/list_entry_name"
        android:textSize="18sp"
        android:textStyle="normal|bold|italic" />
    <TextView
        android:id="@+id/list_entry_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="style"
        android:layout_below="@id/list_entry_location"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/list_entry_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/list_entry_style"
        android:layout_below="@id/list_entry_location"
        android:text="Grade"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/list_entry_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="comments"
        android:layout_below="@id/list_entry_style"
        android:textSize="16sp" />
</RelativeLayout>