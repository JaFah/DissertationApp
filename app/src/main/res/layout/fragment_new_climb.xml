<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.clmain.dissertationapp.ui.climblog.NewClimbFragment"
    android:weightSum="1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginRight="8dp">
        <RelativeLayout
            android:id="@+id/layout_new_climb"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_climb_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_view_new_climb_title"
                android:textSize="26dp"
                android:layout_margin="8dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:id="@+id/layout_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/text_climb_title">
                <Button
                    android:id="@+id/button_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_date"
                    android:onClick="onClick"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_marginLeft="8dp"
                    />

                <EditText
                    android:id="@+id/edit_climb_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/edit_hint_climb_name"
                    android:padding="8dp"
                    style="@style/climbLog"
                    android:maxLines="1"
                     />
            </LinearLayout>
            <EditText
                android:id="@+id/edit_location"
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:hint="@string/edit_hint_location"
                style="@style/climbLog"
                android:maxLines="1"
                android:layout_below="@+id/layout_date"
                android:layout_alignParentEnd="true" />
            <TextView
                android:id="@+id/text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/climbLog"
                android:text="@string/text_view_style"
                android:layout_below="@id/edit_location"
                android:textStyle="bold"
                android:textSize="18sp" />
            <Spinner
                android:id="@+id/spinner_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/spinner_hint_style"
                android:layout_below="@id/text_style"
                style="@style/climbLog"
                android:paddingRight="8dp"/>
            <TextView
                android:id="@+id/text_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/climbLog"
                android:textStyle="bold"
                android:text="@string/text_view_grade"
                android:layout_below="@id/spinner_style"
                android:textSize="18sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/layout_grade"
                android:layout_below="@id/text_grade"
                >
                <Spinner
                    android:id="@+id/spinner_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_grade"
                    style="@style/climbLog"
                    android:layout_marginRight="8dp"
                    />
                <EditText
                    android:id="@+id/edit_grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/edit_hint_grade"
                    android:layout_below="@id/spinner_grade"
                    style="@style/climbLog"
                    android:layout_marginRight="8dp"
                    android:padding="8dp"
                    android:maxLines="1"                    />
            </LinearLayout>
            <EditText
                android:id="@+id/edit_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edit_hint_comments"
                android:layout_below="@id/layout_grade"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:paddingLeft="8dp"
                android:paddingBottom="20dp"
                android:minLines="5"
                />


        </RelativeLayout>
    </ScrollView>
</LinearLayout>
