<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/layout_cLimb_log_root"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.clmain.dissertationapp.ui.climblog.ClimbLogFragment"
    android:background="#eeeeee"
    >
    <TextView
        android:id="@+id/text_sorter_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_view_sorter_title"
        android:textSize="24sp"
        android:textStyle="normal|bold" />
    <Spinner
        android:id="@+id/spinner_sorter"
        android:hint="@string/spinner_hint_sorter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"/>

    <ListView
        android:id="@+id/layout_list_climb_log"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="multipleChoiceModal"
        android:clickable="true"

        >
    </ListView>

</LinearLayout>
